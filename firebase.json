{
  "hosting": {
    "site": "zschool-app",
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "/assets/**",
        "headers": [
          {"key": "Cache-Control", "value": "public, max-age=31536000, immutable"}
        ]
      }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "firestore": {"rules": "firestore.rules"}
}
